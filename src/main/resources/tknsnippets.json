{
  "Tekton: ClusterTask": {
    "prefix": "Tekton: ClusterTask",
    "body": [
      "apiVersion: tekton.dev/v1alpha1",
      "kind: ClusterTask",
      "metadata:",
      "  name: ${1:foo}",
      "spec:",
      "  steps:",
      "  - image: ${2:ubuntu}",
      "    script: |",
      "      ${3:#!/usr/bin/env bash}",
      "      ${4:echo \"Hello\"}"
    ],
    "description": "Create a ClusterTask Resource",
    "keywords": [
      "apiversion",
      "clustertask"
    ]
  },
  "Tekton: Parameter": {
    "prefix": "Tekton: Parameter",
    "body": [
      "- name: ${1:foo}",
      "  value: ${2:bar}",
      ""
    ],
    "description": "A generic parameter used across any YAML that are key/value pair",
    "keywords": [
      "parameter",
      "- name",
      "name"
    ]
  },
  "Tekton: Pipeline": {
    "prefix": "Tekton: Pipeline",
    "body": [
      "apiVersion: tekton.dev/v1alpha1",
      "kind: Pipeline",
      "metadata:",
      "  name: ${1:app-deploy}",
      "  namespace: ${2: namespace}",
      "spec:",
      "  resources:",
      "    - name: ${3:pipeline-resource-type}",
      "      type: ${4:pipeline-type}",
      "  tasks:",
      "    - name: ${5:taskName}",
      "      taskRef:",
      "        name: ${6:build-app}"
    ],
    "description": "Create a Tekton Pipeline Resource",
    "keywords": [
      "apiversion",
      "pipeline"
    ]
  },
  "Tekton: PipelineTaskReference": {
    "prefix": "Tekton: PipelineTaskReference",
    "body": [
      "- name: ${1:taskName}",
      "  taskRef:",
      "    name: ${2:build-and-push}",
      "  runAfter:",
      "  - ${3:another-task-name}",
      "  $LINE_COMMENT params:",
      "  $LINE_COMMENT resources:"
    ],
    "description": "Tekton Pipeline Task Reference",
    "keywords": [
      "pipelinetaskreference",
      "- name",
      "taskref"
    ]
  },
  "Tekton: PipelineTaskReferenceInput": {
    "prefix": "Tekton: PipelineTaskReferenceInput",
    "body": [
      "params:",
      "- name: ${1:name}",
      "  value: ${2:value}",
      "resources:",
      "  inputs:",
      "    - name: ${3:source}",
      "      resource: ${4:app-source}",
      "  outputs:",
      "    - name: ${5:builtImage}",
      "      resource: ${6:app-image}"
    ],
    "description": "Tekton Pipeline Task Reference Inputs, Parameters and Outputs",
    "keywords": [
      "pipelinetaskreferenceinput",
      "params",
      "resources"
    ]
  },
  "Tekton: PipelineResource": {
    "prefix": "Tekton: PipelineResource",
    "body": [
      "apiVersion: tekton.dev/v1alpha1",
      "kind: PipelineResource",
      "metadata:",
      "  name: ${1:git-source}",
      "  namespace: ${2: namespace}",
      "spec:",
      "  type: ${3|git,image,pullRequest,cluster,storage|}",
      "  params:",
      "    - name: ${4:url}",
      "      value: ${5:https://github.com/git-source/git-source.git}",
      "  ## Check https://github.com/tektoncd/pipeline/blob/master/docs/resources.md#pipelineresources for more applicable parameters"
    ],
    "description": "Create a PipelineResource Resource",
    "keywords": [
      "pipelineresource",
      "apiversion"
    ]
  },
  "Tekton: PipelineResourceType": {
    "prefix": "Tekton: PipelineResourceType",
    "body": [
      "- name: ${1:app-source}",
      "  type: ${2|git,image,pullRequest,cluster,storage|}"
    ],
    "description": "Create a PipelineResource Type Resource",
    "keywords": [
      "pipelineresourcetype",
      "- name",
      "name"
    ]
  },
  "Tekton: PipelineRun": {
    "prefix": "Tekton: PipelineRun",
    "body": [
      "apiVersion: tekton.dev/v1alpha1",
      "kind: PipelineRun",
      "metadata:",
      "  name: ${1:foo-run}",
      "spec:",
      "  pipelineRef:",
      "    name: ${2:foo}",
      "  resources:",
      "    - name: ${3:source}",
      "      resourceRef:",
      "        name: ${4:skaffold-source}"
    ],
    "description": "Create a Tekton PipelineRun Resource",
    "keywords": [
      "pipelinerun",
      "apiversion"
    ]
  },
  "Tekton: K8s Limits": {
    "prefix": "Tekton: K8s Limits",
    "body": [
      "resources:",
      "  limits:",
      "    cpu: 4",
      "    memory: 6Gi",
      "    requests:",
      "      cpu: 2",
      "      memory: 4Gi"
    ],
    "description": "Defines the Kubernetes resource limits and requests",
    "keywords": [
      "resource",
      "limits"
    ]
  },
  "Tekton: Task": {
    "prefix": "Tekton: Task",
    "body": [
      "apiVersion: tekton.dev/v1alpha1",
      "kind: Task",
      "metadata:",
      "  name: ${1:foo}",
      "  namespace: ${2: namespace}",
      "spec:",
      "  inputs:",
      "    params:",
      "    - name: ${3:pathToDockerFile}",
      "      type: ${4:string}",
      "      description: ${5:The path to the dockerfile to build}",
      "      default: ${6:/workspace/workspace/Dockerfile}",
      "    resources:",
      "    - name: ${7:workspace}",
      "      type: ${8:git}",
      "  outputs:",
      "    resources:",
      "    - name: ${9:buildImage}",
      "      type: ${10:image}",
      "  steps:",
      "    - name: ${11:build-sources}",
      "      image: ${12:ubuntu}",
      "      command: ",
      "      - ${13:/bin/bash}",
      "      args: [${14:'-c', 'echo hello world'}]"
    ],
    "description": "Create a Tekton Task Resource",
    "keywords": [
      "task",
      "apiversion"
    ]
  },
  "Tekton: TaskInput": {
    "prefix": "Tekton: TaskInput",
    "body": [
      "inputs:",
      "  resources:",
      "  - name: ${1:source}",
      "    type: ${2|git,image,pullRequest,cluster,storage|}",
      "  params:",
      "  - name: ${3:foo}",
      "    description: ${4:Parameter description}",
      "    default: ${5:default value}",
      "    type: ${6:string}",
      "outputs:",
      "  resources:",
      "  - name: ${7:builtImage}",
      "    outputImageDir: ${8:path/to/image}",
      "    targetPath: \"\"",
      "    type: image",
      "$LINE_COMMENT steps:"
    ],
    "description": "Tekton Task Inputs, Parameters and Outputs",
    "keywords": [
      "taskinput",
      "input",
      "output",
      "param",
      "resource"
    ]
  },
  "Tekton: TaskParameter": {
    "prefix": "Tekton: TaskParameter",
    "body": [
      "- name: ${1:foo}",
      "  description: ${2:Parameter description}",
      "  default: ${3:default value}",
      "  type: ${4:string}"
    ],
    "description": "Tekton Pipeline Task Parameter",
    "keywords": [
      "taskparam",
      "- name",
      "name"
    ]
  },
  "Tekton: TaskRun": {
    "prefix": "Tekton: TaskRun",
    "body": [
      "apiVersion: tekton.dev/v1alpha1",
      "kind: TaskRun",
      "metadata:",
      "  name: ${1:echo-hello-world-run}",
      "spec:",
      "  taskRef:",
      "    name: ${2:echo-hello-world}"
    ],
    "description": "Create a Tekton TaskRun Resource",
    "keywords": [
      "taskrun",
      "apiversion"
    ]
  },
  "Tekton: TaskStep": {
    "prefix": "Tekton: TaskStep",
    "body": [
      "- name: ${2:echo2}",
      "  image: ${3:fedora,quay.io/buildah/stable}",
      "  workingDir: \\\"/workspace/source/${4:\\\\${inputs.params.contextDir}}\\\"",
      "  command:",
      "  - ${5:echo2}",
      "  args:",
      "  - 'bye world'"
    ],
    "description": "Tekton Task Step",
    "keywords": [
      "taskstep",
      "- name",
      "name"
    ]
  }
}