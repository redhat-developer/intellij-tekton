{
  "Tekton: ClusterTask": {
    "prefix": "Tekton: ClusterTask",
    "body": [
      "apiVersion: tekton.dev/v1alpha1",
      "kind: ClusterTask",
      "metadata:",
      "  name: foo",
      "spec:",
      "  steps:",
      "  - image: fedora",
      "    script: |",
      "      #!/usr/bin/env bash",
      "      echo \"Hello\""
    ],
    "description": "Create a ClusterTask Resource",
    "keywords": [
      "apiversion",
      "clustertask"
    ]
  },
  "Tekton: Parameter": {
    "prefix": "Tekton: Parameter",
    "body": [
      "- name: foo",
      "  value: bar",
      ""
    ],
    "description": "A generic parameter used across any YAML that are key/value pair",
    "keywords": [
      "parameter",
      "- name",
      "name"
    ]
  },
  "Tekton: Pipeline": {
    "prefix": "Tekton: Pipeline",
    "body": [
      "apiVersion: tekton.dev/v1alpha1",
      "kind: Pipeline",
      "metadata:",
      "  name: app-deploy",
      "  namespace:  ${namespace}",
      "spec:",
      "  resources:",
      "    - name: pipeline-resource-type",
      "      type: pipeline-type",
      "  tasks:",
      "    - name: foo",
      "      taskRef:",
      "        name: build-app"
    ],
    "description": "Create a Tekton Pipeline Resource",
    "keywords": [
      "apiversion",
      "pipeline"
    ]
  },
  "Tekton: PipelineTaskReference": {
    "prefix": "Tekton: PipelineTaskReference",
    "body": [
      "- name: foo",
      "  taskRef:",
      "    name: build-and-push",
      "  runAfter:",
      "  - another-task-name",
      "  params:",
      "  resources:"
    ],
    "description": "Tekton Pipeline Task Reference",
    "keywords": [
      "pipelinetaskreference",
      "- name",
      "taskref"
    ]
  },
  "Tekton: PipelineTaskReferenceInput": {
    "prefix": "Tekton: PipelineTaskReferenceInput",
    "body": [
      "params:",
      "- name: name",
      "  value: value",
      "resources:",
      "  inputs:",
      "    - name: source",
      "      resource: app-source",
      "  outputs:",
      "    - name: builtImage",
      "      resource: app-image"
    ],
    "description": "Tekton Pipeline Task Reference Inputs, Parameters and Outputs",
    "keywords": [
      "pipelinetaskreferenceinput",
      "params",
      "resources"
    ]
  },
  "Tekton: PipelineResource": {
    "prefix": "Tekton: PipelineResource",
    "body": [
      "apiVersion: tekton.dev/v1alpha1",
      "kind: PipelineResource",
      "metadata:",
      "  name: git-source",
      "  namespace:  ${namespace}",
      "spec:",
      "  type: git",
      "  params:",
      "    - name: url",
      "      value: https://github.com/git-source/git-source.git",
      "  ## Check https://github.com/tektoncd/pipeline/blob/master/docs/resources.md#pipelineresources for more applicable parameters"
    ],
    "description": "Create a PipelineResource Resource",
    "keywords": [
      "pipelineresource",
      "apiversion"
    ]
  },
  "Tekton: PipelineResourceType": {
    "prefix": "Tekton: PipelineResourceType",
    "body": [
      "- name: app-source",
      "  type: git"
    ],
    "description": "Create a PipelineResource Type Resource",
    "keywords": [
      "pipelineresourcetype",
      "- name",
      "name"
    ]
  },
  "Tekton: PipelineRun": {
    "prefix": "Tekton: PipelineRun",
    "body": [
      "apiVersion: tekton.dev/v1alpha1",
      "kind: PipelineRun",
      "metadata:",
      "  name: foo-run",
      "spec:",
      "  pipelineRef:",
      "    name: foo",
      "  resources:",
      "    - name: source",
      "      resourceRef:",
      "        name: skaffold-source"
    ],
    "description": "Create a Tekton PipelineRun Resource",
    "keywords": [
      "pipelinerun",
      "apiversion"
    ]
  },
  "Tekton: K8s Limits": {
    "prefix": "Tekton: K8s Limits",
    "body": [
      "resources:",
      "  limits:",
      "    cpu: 4",
      "    memory: 6Gi",
      "    requests:",
      "      cpu: 2",
      "      memory: 4Gi"
    ],
    "description": "Defines the Kubernetes resource limits and requests",
    "keywords": [
      "resource",
      "limits"
    ]
  },
  "Tekton: Task": {
    "prefix": "Tekton: Task",
    "body": [
      "apiVersion: tekton.dev/v1alpha1",
      "kind: Task",
      "metadata:",
      "  name: foo",
      "  namespace:  ${namespace}",
      "spec:",
      "  inputs:",
      "    params:",
      "    - name: pathToDockerFile",
      "      type: string",
      "      description: The path to the dockerfile to build",
      "      default: /workspace/workspace/Dockerfile",
      "    resources:",
      "    - name: workspace",
      "      type: git",
      "  outputs:",
      "    resources:",
      "    - name: buildImage",
      "      type: image",
      "  steps:",
      "    - name: build-sources",
      "      image: fedora",
      "      command: ",
      "      - /bin/bash",
      "      args: ['-c', 'echo hello world']"
    ],
    "description": "Create a Tekton Task Resource",
    "keywords": [
      "task",
      "apiversion"
    ]
  },
  "Tekton: TaskInput": {
    "prefix": "Tekton: TaskInput",
    "body": [
      "inputs:",
      "  resources:",
      "  - name: source",
      "    type: git",
      "  params:",
      "  - name: foo",
      "    description: Parameter description",
      "    default: default value",
      "    type: string",
      "outputs:",
      "  resources:",
      "  - name: builtImage",
      "    outputImageDir: path/to/image",
      "    targetPath: \"\"",
      "    type: image",
      "steps:"
    ],
    "description": "Tekton Task Inputs, Parameters and Outputs",
    "keywords": [
      "taskinput",
      "input",
      "output",
      "param",
      "resource"
    ]
  },
  "Tekton: TaskParameter": {
    "prefix": "Tekton: TaskParameter",
    "body": [
      "- name: foo",
      "  description: Parameter description",
      "  default: default value",
      "  type: string"
    ],
    "description": "Tekton Pipeline Task Parameter",
    "keywords": [
      "taskparam",
      "- name",
      "name"
    ]
  },
  "Tekton: TaskRun": {
    "prefix": "Tekton: TaskRun",
    "body": [
      "apiVersion: tekton.dev/v1alpha1",
      "kind: TaskRun",
      "metadata:",
      "  name: echo-hello-world-run",
      "spec:",
      "  taskRef:",
      "    name: echo-hello-world"
    ],
    "description": "Create a Tekton TaskRun Resource",
    "keywords": [
      "taskrun",
      "apiversion"
    ]
  },
  "Tekton: TaskStep": {
    "prefix": "Tekton: TaskStep",
    "body": [
      "- name: echo2",
      "  image: fedora",
      "  workingDir: \\\"/workspace/source/\\\\${inputs.params.contextDir}}\\\"",
      "  command:",
      "  - echo2",
      "  args:",
      "  - 'bye world'"
    ],
    "description": "Tekton Task Step",
    "keywords": [
      "taskstep",
      "- name",
      "name"
    ]
  }
